<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_add_student"
    android:layout_width="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bobcob7.untscanner.AddStudentActivity"
    android:layout_height="200dp">

    <TextView
        android:text="Student ID:   00000000"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.3333333333"
        android:id="@+id/idView"
        android:gravity="center_vertical" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.3333333333"
        android:inputType="textPersonName"
        android:ems="15"
        android:hint="Name"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:id="@+id/nameView" />

    <Switch
        android:text="Active"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.333333333"
        android:gravity="center_vertical"
        android:id="@+id/activeView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3333333333">

        <Button
            android:text="Add User"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/submit"
            android:layout_weight="0.5"
            android:onClick="onSubmit" />

        <Button
            android:text="Cancel"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/cancel"
            android:layout_weight="0.5"
            android:onClick="onCancel" />
    </LinearLayout>
</LinearLayout>
